<div class="col mb-5">
    <div class="card h-100 cardColor">
        <!-- Sale badge-->
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem"></div>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%- credit.name %> </h5>
                <!-- Product price-->
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center mb-2"><a onclick="creditBuy('<%- credit._id %>')" class="btn btn-outline-dark mt-auto" href="#">Satin Al</a></div>
        </div>
    </div>
</div>